{% extends 'base.html.twig' %}

{% block contenu %}

    <div class="example-wrapper">
        <h2 style="color: #080044; font-weight: bold;"> {{ stage.titre}} </h2>
        
        <div class="card">
            <h5 style="color: #080044; font-weight: bold;">Formation</h5>
            {% for formationCourante in stage.formations %}
                <p>{{ formationCourante.nomLong }}</p>
            {% endfor %}

            <h5 style="color: #080044; font-weight: bold;">Entreprise</h5>
            <p>{{ stage.entreprise.nom }}</p>
            <p>{{ stage.entreprise.activite }}</p>

            <h5 style="color: #080044; font-weight: bold;">Mission du stage</h5>
            <p>{{ stage.mission }}</p>

            <h5 style="color: #080044; font-weight: bold;">Nos contacts</h5>
            <p>{{ stage.entreprise.siteweb }}</p>
            <p>{{ stage.email }}</p>
        </div>
    </div>

{% endblock %}
