{% extends 'base.html.twig' %}

{% block contenu %}

    <div class="example-wrapper">
        <h2 style="color: #080044; font-weight: bold;">Bienvenue sur la page comportant des stages liés à l'entreprise {{ entreprise.nom }}</h2>
        
        <table class="table table-hover">
            <thead>
                <tr>
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <td style="font-weight: bold;">TITRE</td>
                        </div>

                        <div class="col-md-6 col-xs-12">
                            <td style="font-weight: bold;">MISSION</td>
                        </div>
                    </div>
                </tr>
            </thead>
            {% for stageCourant in entreprise.stages %}
                {% for formationCourante in stageCourant.formations %}
                    <tbody>
                        <tr>
                            <div class="row">
                                <div class="col-md-6 col-xs-12">
                                    <td><a href="{{path('prostages_stagesPourUneEntreprise', {idE:entreprise.id, idS:stageCourant.id})}}">{{ stageCourant.titre }}</a></td>
                                </div>

                                <div class="col-md-6 col-xs-12">
                                    <td>{{ stageCourant.mission }}</td>
                                </div>
                            </div>
                        </tr>
                    </tbody>
                {% endfor %}
            {% endfor %}
        </table>
    </div>

{% endblock %}