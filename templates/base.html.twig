<!doctype html>
<html lang="fr">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>{% block title %}ProStages{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
    and uncomment the following Encore helpers to start using Symfony UX #}
    
    {% block stylesheets %}
    {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}

    {% block javascripts %}
    {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}
  </head>

  <body>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->

    <!-- Creation du container general -->
    <div class="container">
        <!-- Creation premiere ligne -->
        <div class="row">
            {% block titre %}
                <img src={{asset('/logoProStages.png')}} alt="logo_ProStages"/>
            {% endblock %}
        </div>

        <!-- Creation deuxieme ligne-->
        <div class="row">
            {% block menu %}
                <!-- Creation premiere colonne -->
                <div class="col-md-4 col-xs-12"> <!-- pas de sm parce que même taille -->
                    <a href="{{path('prostages_accueil')}}">Page d'accueil</a>
                </div>

                <!-- Creation deuxieme colonne -->
                <div class="col-md-4 col-xs-12">
                    <a href="{{path('prostages_formation')}}">Filtrer par formation</a>
                </div>

                <!-- Creation troisieme colonne -->
                <div class="col-md-4 col-xs-12">
                    <a href="{{path('prostages_entreprises')}}">Filtrer par entreprise</a>
                </div>
            {% endblock %}
        </div>

        <!-- Creation troisieme ligne -->
        <div class="row">
            {% block contenu %}
                <h1>---CONTENU---</h1>
            {% endblock %}
        </div>

        <!-- Creation troisieme ligne -->
        <div class="row">
            {% block footer %}
                <!-- Creation premiere colonne -->
                <div class="col-md-6 col-xs-12">
                    <p>©LucieHalloucherie</p>
                </div>

                <!-- Creation deuxieme colonne -->
                <div class="col-md-6 col-xs-12">
                    <p>Mentions légales</p>
                </div>
            {% endblock %}
        </div>
    </div>
  </body>
</html>