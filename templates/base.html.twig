<!doctype html>
<html lang="fr">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- titre de la page internet -->
    <title>
        {% block title %}
            ProStages
        {% endblock %}
    </title>
    
    <!-- BLOC DES FEUILLES DE STYLE -->
    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/monCSS.css" rel="stylesheet">
    {% endblock %}
  </head>

  <body>
    <!-- Creation du container general -->
    <div class="container">
        <!-- Creation premiere ligne -->
        <div class="row">
            <!-- BLOC TITRE DE LA PAGE -->
            {% block titre %}
                <a href="{{path('prostages_accueil')}}"><img src={{asset('/logoProStages.png')}} alt="logo_ProStages" style="width:1200px; height:200px; margin:auto"/></a>
            {% endblock %}
        </div>

        <br>

        <!-- Creation deuxieme ligne -->
        <div class="row">
            <!-- BLOC SOUS-TITRE DE LA PAGE -->
            {% block sous_titre %}
                <p style="font-weight:bold">Bienvenue sur ProStages, le site pour vous trouver un stage!</p>
            {% endblock %}
        </div>

        <br>

        <!-- Creation ligne de couleur -->
        <div class="row">
            <div class="col-12" style="background-color: #080044; border: 2px solid #080044">
            </div>
        </div>

        <!-- Creation troisieme ligne -->
        <div class="row">
            <!-- BLOC MENU DE LA PAGE -->
            {% block menu %}
                <!-- Creation premiere colonne -->
                <div class="col-md-6 col-xs-12">
                    <a href="{{path('prostages_formation')}}">Filtrer par formation</a>
                </div>

                <!-- Creation deuxieme colonne -->
                <div class="col-md-6 col-xs-12">
                    <a href="{{path('prostages_entreprises')}}">Filtrer par entreprise</a>
                </div>
            {% endblock %}
        </div>

        <!-- Creation ligne de couleur -->
        <div class="row">
            <div class="col-12" style="background-color: #080044; border: 2px solid #080044">
            </div>
        </div>

        <br>

        <!-- Creation quatrieme ligne -->
        <div class="row">
            <!-- BLOC CONTENU DE LA PAGE -->
            {% block contenu %}
                <h1>---CONTENU---</h1>
            {% endblock %}
        </div>

        <!-- Creation cinquieme ligne -->
        <div class="row" style="background-color: #080044; border: 2px solid #080044; color: white">
            <!-- BLOC FOOTER DE LA PAGE -->
            {% block footer %}
                <!-- Creation premiere colonne -->
                <div class="col-md-2 col-xs-12">
                    <p>©LucieHalloucherie</p>
                </div>

                <!-- Creation deuxieme colonne -->
                <div class="col-md-2 offset-md-3 col-xs-12">
                    <p>2022 | DUT Informatique</p>
                </div>

                <!-- Creation troisieme colonne -->
                <div class="col-md-2 offset-md-3 col-xs-12">
                    <p>Mentions légales</p>
                </div>
            {% endblock %}
        </div>
    </div>

    <!-- BLOC JAVASCRIPT -->
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    {% endblock %}
  </body>
</html>